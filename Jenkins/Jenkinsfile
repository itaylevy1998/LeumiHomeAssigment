pipeline {
    agent {
        docker {
            alwaysPull true
            image 'leumi/agent:1.0'
            args "--privileged -u 0:0 -v /var/run/docker.sock:/var/run/docker.sock"
        }
    }
    stages {
        stage('Build Image') {
            steps {
                sh "whoami"
                sh "ls"
                sh "docker images"
                
            }
        }

    }

}